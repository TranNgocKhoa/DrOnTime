<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:selectableItemBackground"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/imgHinhAnh"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal" >
                <ImageView
                    android:id="@+id/imgTenBenhNhan"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/account"
                    android:scaleType="center"/>
                <TextView
                    android:id="@+id/tvTenBenhNhan"
                    android:layout_toEndOf="@id/imgTenBenhNhan"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Trần Ngọc Khoa"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_weight="4"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal" >
                <ImageView
                    android:id="@+id/imgTrangThai"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/green_check"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:id="@+id/tvTrangThai"
                    android:layout_toEndOf="@id/imgTrangThai"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/finish_patient"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_weight="4"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>