<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.khoa1.drontime.ThemBenhNhanActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/groupViewOverView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/custom_bottom_border"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/imgHinhAnh"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/no_photo"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/imgButtonChupHinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:src="@drawable/camera"
                    android:scaleType="center"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/groupViewOverView">
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_textview_bottom_border"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageTenBenhNhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/account_2"/>
            <EditText
                android:id="@+id/edTenBenhNhan"
                android:layout_toRightOf="@id/imageTenBenhNhan"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:padding="0dp"
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:background="@android:color/transparent"
                android:hint="Tên Bệnh Nhân"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_textview_bottom_border"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageNgaySinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/calendar"/>
            <TextView
                android:id="@+id/tvNgaySinh"
                android:layout_toRightOf="@id/imageNgaySinh"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:padding="0dp"
                android:layout_width="wrap_content"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:textSize="25sp"

                android:text="Ngày Sinh"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_textview_bottom_border"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgDienThoai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/phone_icon"/>
            <EditText
                android:id="@+id/edSoDienThoai"
                android:layout_toRightOf="@id/imgDienThoai"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:padding="0dp"
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:background="@android:color/transparent"
                android:hint="Số điện thoại"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_textview_bottom_border"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/email_icon"/>
            <EditText
                android:id="@+id/edEmail"
                android:layout_toRightOf="@id/imgEmail"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:padding="0dp"
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:background="@android:color/transparent"
                android:hint="Email"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_textview_bottom_border"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBoxGioiTinh"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:button="@null"
                android:background="?android:attr/listChoiceIndicatorMultiple"/>

            <TextView
                android:id="@+id/tvGioiTinh"
                android:layout_toRightOf="@id/checkBoxGioiTinh"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:padding="0dp"
                android:layout_width="wrap_content"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Nam"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_textview_bottom_border"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edDiaChi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:background="@drawable/custom_textview_bottom_border"
                android:gravity="left"
                android:padding="10dp"
                android:hint="Địa chỉ"
                android:lines="6"/>
        </RelativeLayout>
    </LinearLayout>
    </RelativeLayout>
</ScrollView>

